<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript">
    Swal.fire({
        icon: 'success',
        title: 'Usuario registrado correctamente',
        text: 'El usuario fue registrado de forma correcta, acabamos de enviar un correo electronico para informale de su registro dentro de CONAIC ITSZaS',
        confirmButtonColor: '#197B7A'
    }).then((result) =>{
        if (result.isConfirmed){
            window.location.href = "index_visual_usu.php";
        }
        else{
            window.location.href = "index_visual_usu.php";
        }
    })
</script>



